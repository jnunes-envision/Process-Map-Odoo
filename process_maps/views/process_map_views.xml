<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Process Map Form View -->
    <record id="view_process_map_form" model="ir.ui.view">
        <field name="name">process.map.form</field>
        <field name="model">process.map</field>
        <field name="arch" type="xml">
            <form string="Process Map">
                <header>
                    <button name="action_publish" string="Publish" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '=', 'published')]}"/>
                    <button name="action_archive" string="Archive" type="object" 
                            attrs="{'invisible': [('state', '=', 'archived')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_increment_access" icon="fa-eye">
                            <field name="access_count" widget="statinfo" string="Views"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Enter process name..."/>
                            <field name="category_id"/>
                            <field name="department_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="version"/>
                            <field name="responsible_user_id"/>
                            <field name="is_active"/>
                            <field name="last_updated" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagram" name="diagram">
                            <group>
                                <field name="diagram_type"/>
                                <field name="diagram_data" widget="text" 
                                       attrs="{'invisible': [('diagram_type', '=', 'image')]}"
                                       placeholder="Enter diagram data (BPMN, Mermaid, or Flowchart format)..."/>
                                <field name="image" widget="image" 
                                       attrs="{'invisible': [('diagram_type', '!=', 'image')]}"/>
                                <field name="image_filename" 
                                       attrs="{'invisible': [('diagram_type', '!=', 'image')]}"/>
                            </group>
                            <div class="alert alert-info" role="alert" attrs="{'invisible': [('diagram_type', '!=', 'mermaid')]}">
                                <strong>Mermaid Syntax:</strong> Use Mermaid syntax for flowcharts, sequence diagrams, etc.
                                Example: graph TD; A[Start] --> B[Process] --> C[End]
                            </div>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter detailed process description..."/>
                        </page>
                        <page string="Related Information" name="related">
                            <group>
                                <group string="Related Projects">
                                    <field name="related_project_ids" widget="many2many_tags"/>
                                </group>
                                <group string="Tags">
                                    <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Change History" name="history">
                            <field name="change_log_ids" readonly="1">
                                <tree>
                                    <field name="change_date"/>
                                    <field name="user_id"/>
                                    <field name="action"/>
                                    <field name="details"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Process Map List View -->
    <record id="view_process_map_tree" model="ir.ui.view">
        <field name="name">process.map.tree</field>
        <field name="model">process.map</field>
        <field name="arch" type="xml">
            <tree string="Process Maps" decoration-success="state == 'published'" 
                  decoration-muted="state == 'archived'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="version"/>
                <field name="state" widget="badge" decoration-success="state == 'published'" 
                       decoration-info="state == 'draft'" decoration-muted="state == 'archived'"/>
                <field name="responsible_user_id"/>
                <field name="access_count"/>
                <field name="last_updated"/>
            </tree>
        </field>
    </record>

    <!-- Process Map Kanban View -->
    <record id="view_process_map_kanban" model="ir.ui.view">
        <field name="name">process.map.kanban</field>
        <field name="model">process.map</field>
        <field name="arch" type="xml">
            <kanban default_group_by="category_id" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="category_id"/>
                <field name="version"/>
                <field name="responsible_user_id"/>
                <field name="is_active"/>
                <field name="access_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="category_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="statusbar" statusbar_visible="draft,published"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span>Version: </span><field name="version"/>
                                    </div>
                                    <div>
                                        <span>Views: </span><field name="access_count"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="responsible_user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Process Map Search View -->
    <record id="view_process_map_search" model="ir.ui.view">
        <field name="name">process.map.search</field>
        <field name="model">process.map</field>
        <field name="arch" type="xml">
            <search string="Process Maps">
                <field name="name" string="Process Name" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="responsible_user_id"/>
                <field name="tags_ids"/>
                <field name="state"/>
                <separator/>
                <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <separator/>
                <filter string="My Processes" name="my_processes" domain="[('responsible_user_id', '=', uid)]"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsible" name="group_responsible" context="{'group_by': 'responsible_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Process Map Action -->
    <record id="action_process_map" model="ir.actions.act_window">
        <field name="name">Process Maps</field>
        <field name="res_model">process.map</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_published': 1, 'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first process map!
            </p>
            <p>
                Process maps help document and visualize your business processes.
                Employees can easily consult them, and managers can quickly update them.
            </p>
        </field>
    </record>

    <!-- Category Views -->
    <record id="view_process_map_category_tree" model="ir.ui.view">
        <field name="name">process.map.category.tree</field>
        <field name="model">process.map.category</field>
        <field name="arch" type="xml">
            <tree string="Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="process_map_count"/>
            </tree>
        </field>
    </record>

    <record id="view_process_map_category_form" model="ir.ui.view">
        <field name="name">process.map.category.form</field>
        <field name="model">process.map.category</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Process Maps">
                            <field name="process_map_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="version"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_process_map_category" model="ir.actions.act_window">
        <field name="name">Process Map Categories</field>
        <field name="res_model">process.map.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

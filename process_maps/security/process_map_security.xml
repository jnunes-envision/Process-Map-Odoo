<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Employees can only view published and active process maps -->
        <record id="process_map_employee_rule" model="ir.rule">
            <field name="name">Process Map: Employee Access</field>
            <field name="model_id" ref="base.model_process_map"/>
            <field name="domain_force">['|', ('state', '=', 'published'), ('responsible_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Managers can view and edit all process maps -->
        <record id="process_map_manager_rule" model="ir.rule">
            <field name="name">Process Map: Manager Access</field>
            <field name="model_id" ref="base.model_process_map"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_process_map_manager'))]"/>
        </record>
    </data>
</odoo>
